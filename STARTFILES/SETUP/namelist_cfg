/
!-----------------------------------------------------------------------
&namtsd        !    Temperature & Salinity Data  (init/dmp)             (default: OFF)
!-----------------------------------------------------------------------
   !                       ! =T  read T-S fields for:
   ln_tsd_init   = .false.         !  ocean initialisation
   ln_tsd_interp = .false.          !  Interpolation of T & S in the verticalinput data (T) or not (F)
   ln_tsd_dmp    = .false.         !  T-S restoring   (see namtra_dmp)
   
   cn_dir      = ''      ! not needed with MYRESTART.nc ! root directory for the T-S data location
   !___________!_________________________!___________________!___________!_____________!________!___________!__________________!__________!_______________!
   !           !  file name              ! frequency (hours) ! variable  ! time interp.!  clim  ! 'yearly'/ ! weights filename ! rotation ! land/sea mask !
   !           !                         !  (if <0  months)  !   name    !   (logical) !  (T/F) ! 'monthly' !                  ! pairing  !    filename   !
   sn_tem      = 'votemper_CMEMS-GLOBAL_ANALYSIS_FORECAST_PHY_001_030-SANH_1993.nc',                     -12.,       'votemper',    .false.    , .true. ,  'yearly'  ,    ''            ,    ''    ,    ''
   sn_sal      = 'vosaline_CMEMS-GLOBAL_ANALYSIS_FORECAST_PHY_001_030-SANH_1993.nc',                     -12.,       'vosaline',    .false.    , .true. ,  'yearly'  ,    ''            ,    ''    ,    ''
   sn_dep      = 'initcd_depth.nc',                     -12.,         'gdept_4D',   .false.    , .true. , 'yearly'  ,    ''            , ''       ,    ''
   sn_msk      = 'initcd_mask.nc',                     -12.,           'mask',   .false.    , .true. , 'yearly'  ,    ''            , ''       ,    ''
   nn_tsd_zone = 2 !2  ! Set this to 5 and use the below parameters to create the temp profile used in SF12
   rn_sal_sf = 35.5 
   rn_mld_sf = 120
   rn_maxdep_sf = 5500
   rn_c0_sf = 5
   rn_c1_sf = 10
